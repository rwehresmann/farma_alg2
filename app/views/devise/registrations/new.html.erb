<div class="form-box">
    <div class="header">
      Registre-se
    </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="body bg-gray">
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :name, placeholder: "Nome", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.check_box :prof %> Professor
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation,
                                 placeholder: "Confirme a senha",
                                 class: "form-control" %>
          </div>

          <div class="footer">
            <div><%= f.submit "Registrar", class: "btn btn-block", id: "sign_up" %></div>
          </div>

          <div class="margin text-center links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
